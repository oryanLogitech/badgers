<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.oryan.testapp1.MockupActivity"
    android:background="@drawable/mock">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:id="@+id/backButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/musicButton"
        android:layout_marginTop="436dp"
        android:nestedScrollingEnabled="false"
        android:visibility="visible"
        android:clickable="false"
        android:layout_marginLeft="128dp"
        android:layout_marginStart="128dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/playbackButton"
        android:layout_marginRight="426dp"
        android:layout_marginEnd="426dp"
        android:layout_marginBottom="567dp"
        android:layout_above="@+id/playbackButton"
        android:layout_alignRight="@+id/chatButton"
        android:layout_alignEnd="@+id/chatButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chatButton"
        android:nestedScrollingEnabled="false"
        android:visibility="visible"
        android:clickable="false"
        android:layout_marginRight="47dp"
        android:layout_marginEnd="47dp"
        android:layout_alignBottom="@+id/musicButton"
        android:layout_alignTop="@+id/musicButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@+id/playbackButton"
        android:layout_toEndOf="@+id/playbackButton"
        android:layout_marginLeft="573dp"
        android:layout_marginStart="573dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Call"
        android:id="@+id/playbackButton"
        android:layout_above="@+id/backButton"
        android:layout_alignLeft="@+id/backButton"
        android:layout_alignStart="@+id/backButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/volumeUpButton"
        android:layout_below="@+id/chatButton"
        android:layout_marginTop="48dp"
        android:layout_alignLeft="@+id/musicButton"
        android:layout_alignStart="@+id/musicButton"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="475dp"
        android:layout_above="@+id/playbackButton"
        android:layout_alignRight="@+id/musicButton"
        android:layout_alignEnd="@+id/musicButton"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/volumeDownButton"
        android:layout_marginTop="61dp"
        android:layout_alignTop="@+id/volumeUpButton"
        android:layout_alignLeft="@+id/volumeUpButton"
        android:layout_alignStart="@+id/volumeUpButton"
        android:layout_above="@+id/playbackButton"
        android:layout_marginBottom="426dp"
        android:layout_alignRight="@+id/volumeUpButton"
        android:layout_alignEnd="@+id/volumeUpButton" />

</RelativeLayout>
